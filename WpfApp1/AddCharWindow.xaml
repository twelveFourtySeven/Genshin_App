<Window x:Class="WpfApp1.AddCharWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddCharWindow" MinHeight="300" MinWidth="300" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/BackgroundMondstadt.jpg" Stretch="UniformToFill"/>
        <Border Background="#aaffffff" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" BorderBrush="White" MinWidth="350" MinHeight="350" MaxWidth="500" MaxHeight="500">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <WrapPanel x:Name="CharacterDisplay">
                </WrapPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
